<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ReportListFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/rectangle_13_shape">

		<ImageView
			android:id="@+id/construction_1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginStart="80dp"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="300dp"
			android:contentDescription="construction_1"
			android:src="@drawable/construction_1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>

		<TextView android:id="@+id/risk_assessment"
			android:textStyle="bold|italic"
			android:textSize="36sp"
			android:textColor="@color/risk_assessment_color"
			android:layout_marginLeft="62dp"
			android:layout_marginTop="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/risk_assessment_string"
			tools:ignore="VisualLintOverlap"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

		<ImageView
			android:id="@+id/update_Img"
			android:layout_marginTop="55dp"
			android:foregroundGravity="fill"
			android:layout_width="80dp"
			android:layout_height="100dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

		<EditText
			android:id="@+id/update_hazardTxt"
			android:ems="12"
			android:layout_marginStart="80dp"
			android:layout_marginTop="48dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<EditText
			android:id="@+id/update_descTxt"
			android:ems="12"
			android:layout_marginStart="80dp"
			android:layout_marginTop="78dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<EditText
			android:id="@+id/update_sevTxt"
			android:ems="12"
			android:layout_marginStart="80dp"
			android:layout_marginTop="110dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Button
			android:id="@+id/update_btn"
			android:text="Update"
			android:textSize="10sp"
			android:background="@drawable/custom_button"
			android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginTop="100dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<View
			android:id="@+id/line_1"
			android:background="@drawable/line_1_shape"
			android:layout_marginTop="159dp"
			android:layout_width="410dp"
			android:layout_height="1dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>


		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerView1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="160dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>



	</androidx.constraintlayout.widget.ConstraintLayout>


</layout>