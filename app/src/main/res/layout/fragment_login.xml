<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	 >

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout android:id="@+id/page_loginfragment_ek1"
			android:layout_marginTop="0dp"
			android:layout_marginStart="0dp"
			android:layout_marginLeft="0dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			>

			<RelativeLayout android:id="@+id/background"
				android:layout_marginTop="0dp"
				android:layout_marginStart="0dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginLeft="0dp">

				<ImageView android:id="@+id/rectangle_2"
					android:src="@drawable/rectangle_2"
					android:contentDescription="rectangle_2"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

				<ImageView
					android:id="@+id/rectangle_1"
					android:src="@drawable/rectangle_1"
					android:contentDescription="rectangle_1"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

				<ImageView
					android:id="@+id/rectangle_3"
					android:src="@drawable/rectangle_3"
					android:contentDescription="rectangle_3"
					android:layout_marginStart="0dp"
					android:layout_marginTop="565dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</RelativeLayout>


			<RelativeLayout android:id="@+id/login"
				android:layout_marginTop="271dp"
				android:layout_marginStart="27dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<TextView android:id="@+id/login_ek1"
					android:textStyle="bold"
					android:textSize="36sp"
					android:textColor="@color/login_ek1_color"
					android:layout_marginLeft="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/login_ek1_string"
					/>


				<TextView android:id="@+id/username"
					android:textSize="14sp"
					android:textColor="@color/login_ek1_color"
					android:layout_marginLeft="4dp"
					android:layout_marginTop="77dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Username:"
					/>

				<EditText
					android:id="@+id/username_edTxt"
					android:inputType="textPersonName"
					android:hint="Enter you username"
					android:ems="17"
					android:layout_width="wrap_content"
					android:layout_height="48dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="100dp" />

				<TextView android:id="@+id/password"
					android:textSize="14sp"
					android:textColor="@color/login_ek1_color"
					android:layout_marginLeft="4dp"
					android:layout_marginTop="158dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Password: "
					/>

				<EditText
					android:id="@+id/password_edTxt"
					android:inputType="textPassword"
					android:hint="Enter your password"
					android:ems="17"
					android:layout_width="wrap_content"
					android:layout_height="48dp"
					android:layout_marginStart="0dp"
					android:layout_marginTop="175dp" />

			</RelativeLayout>

			<Button
				android:id="@+id/login_btn"
				android:textSize="36sp"
				android:textColor="@color/login_ek3_color"
				android:layout_marginLeft="250dp"
				android:layout_marginTop="500dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Login"
				/>

		</RelativeLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>